<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <p >
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
			
            <% if(noMatch !== null) { %>
			<h3><%= noMatch %></h3>
			<% } %>
			<p>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Campground Search" class="form-control">
						<input type="submit" value="search" class="btn btn-default">
						<a href="/campgrounds"><input type="button" value="reset" class="btn btn-default"></a>
					</div>
				</form>
			</p>

        </div>
    </header>
    
     <div class="row text-center" style="display:flex; flex-wrap: wrap;" id="campground-grid">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                   <img class="card-img-top" src="<%= campground.image %>">
                   <div class="card-body">
                       <h4 class="card-title"><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>


<% include ../partials/footer %>