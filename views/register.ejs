<% include partials/header %>
    <div class="row">
        <div class="col-md-12">
            <form class="form-signin" action="/register" method="POST">
			<h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
			<input class="form-control" type="text" name="username" placeholder="Username">
			<input class="form-control" type="text" name="firstName" placeholder="First Name">
			<input class="form-control" type="text" name="lastName" placeholder="Last Name">
			<input class="form-control" type="email" name="email" placeholder="Email Address">
			<input class="form-control mb-0" type="password" name="password" placeholder="Password">
			<input class="form-control mt-0" type="text" name="avatar" placeholder="Avatar URL">
			<input class="form-control" type="text" name="adminCode" placeholder="Admin code">
			<button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
            </form>
            <div class="form-signin">
                <a href="/campgrounds" >Go Back</a>
            </div>
        </div>
    </div>
<% include partials/footer %>